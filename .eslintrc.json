{
  "extends": [
    "next/core-web-vitals",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "react/no-unescaped-entities": [
      "error",
      {
        "forbid": [
          {
            "char": "'",
            "alternatives": ["&apos;"]
          },
          {
            "char": "\"",
            "alternatives": ["&quot;"]
          },
          {
            "char": ">",
            "alternatives": ["&gt;"]
          },
          {
            "char": "<",
            "alternatives": ["&lt;"]
          }
        ]
      }
    ],
    "@next/next/no-img-element": "warn",
    "@typescript-eslint/no-unused-vars": "error"
  }
} 